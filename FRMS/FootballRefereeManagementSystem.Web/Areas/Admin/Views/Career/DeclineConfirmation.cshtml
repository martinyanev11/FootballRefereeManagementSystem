@using FootballRefereeManagementSystem.Web.ViewModels.Career;
@model ApplicationViewModel;
@{
    ViewData["Title"] = "Потвърждение";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container shadow alert-danger">
    <h3 class="mt-3">Сигурен ли си, че искаш да отхвърлиш кандидатурата?</h3>
    <hr />
    <div class="row">
        <div class="card">
            <partial name="_ApplicationSummaryPartial" , model="@Model" />
            <div class="card-footer bg-white">
                <a class="btn btn-danger btn-lg" asp-controller="Career" asp-action="Decline" asp-route-id="@Model.Id">
                    Отхвърляне
                </a>
                <a class="btn btn-secondary btn-lg" asp-controller="Career" asp-action="All">
                    Отказ
                </a>
            </div>
        </div>
    </div>
</div>