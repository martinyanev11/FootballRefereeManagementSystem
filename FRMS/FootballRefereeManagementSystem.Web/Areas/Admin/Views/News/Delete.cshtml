@model ArticleViewModel;
@{
    ViewData["Title"] = "Изтриване на новина";
}

<div class="container">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr />
    <div class="row mb-3 text-center">
        <div class="card mb-2 mt-2">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">
                    <small class="text-muted">Дата: @Model.CreatedOn.ToString("dd/MM/yyyy")</small>
                </p>
                <p class="card-text">@Model.Content</p>
            </div>
        </div>
    </div>
    <div class="row align-items-center text-center d-flex justify-content-center">
        <a class="btn btn-danger me-3 col-2" asp-area="Admin" asp-controller="News" asp-action="ConfirmedDelete" asp-route-id="@Model.Id">Изтрий</a>
        <a class="btn btn-secondary col-2" asp-area="" asp-controller="News" asp-action="All">Отказ</a>
    </div>
</div>
