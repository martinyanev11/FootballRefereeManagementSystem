@using FootballRefereeManagementSystem.Web.ViewModels.Team;
@model TeamFormModel;
@{
    ViewData["Title"] = "Редактиране на отбор";
}

<div class="container">
    <h2 class="mb-2">@ViewData["Title"]</h2>
    <hr />
    <form asp-area="Admin" asp-controller="Team" asp-action="Edit" method="post">
        <div class="row">
            <div class="form-group mb-3 col-5">
                <label asp-for="Name" class="dropdown-header">Име:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group mb-3 col-5">
                <label asp-for="Town" class="dropdown-header">Сегашно местоположение:</label>
                <input asp-for="Town" class="form-control" disabled/>
            </div>
        </div>

        <div class="row">
            <div class="form-group mb-3 col-2">
                <label asp-for="Town" class="dropdown-header">Зона:</label>
                <select asp-for="Town" class="form-control">
                    @foreach (string town in Model.Towns)
                    {
                        <option value="@town">@town</option>
                    }
                </select>
            </div>
        </div> 

        <button type="submit" class="btn btn-warning">Редактирай</button>
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Team" asp-action="All">Отказ</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}