@using FootballRefereeManagementSystem.Web.ViewModels.Match;
@model MatchDetailsViewModel;
@{
    ViewData["Title"] = "Мач";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container">
    <div class="row bg-secondary shadow mt-5 mb-5 text-center text-light">
        <div class="offset-3 col-2">
            <div class="mb-3 mt-3"><i class="fa-solid fa-shirt fa-2xl" style="color: @Model.HomeTeamShirtColor;"></i></div>
            <div class="h3">@Model.HomeTeamName</div>
            <div class="h6"><i class="fa-solid fa-location-dot fa-xs"></i> @Model.HomeTeamTownName</div>
        </div>
        <div class="col-2">
            <div class="h4 mt-5">VS</div>
        </div>
        <div class="col-2">
            <div class="mb-3 mt-3"><i class="fa-solid fa-shirt fa-2xl" style="color: @Model.AwayTeamShirtColor;"></i></div>
            <div class="h3">@Model.AwayTeamName</div>
            <div class="h6"><i class="fa-solid fa-location-dot fa-2xs"></i> @Model.AwayTeamTownName</div>
        </div>
        <hr class="offset-2 col-8 text-white" />
    </div>
</div>