@using FootballRefereeManagementSystem.Web.ViewModels.News;
@model ArticleQueryModel;
@{
    ViewData["Title"] = "Новини";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <br />
    <form method="get">
        <div class="row">
            <div class="form-group col-md-3 d-flex justify-content-between">
                <div class="form-group">
                    <label asp-for="Year" class="dropdown-header">Година:</label>
                    <select asp-for="Year" class="form-control">
                        @foreach (var year in Model.Articles.Select(avm => avm.CreatedOn.Year).Distinct().OrderByDescending(y => y))
                        {
                            <option value="@year">@year</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group col-md-3 d-flex justify-content-between">
                <div class="form-group">
                    <label asp-for="ArticleSorting" class="dropdown-header">Сортирай:</label>
                    <select asp-for="ArticleSorting" class="form-control">
                        <option value="0">Най-нови</option>
                        <option value="1">Най-стари</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Филтрирай" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div class="col-md-2 mt-3">
        <a class="btn btn-primary" asp-area="" asp-controller="News" asp-action="Add">Добави новина</a>
    </div>

    <div class="card-columns">
        @if (Model != null && Model.Articles.Any())
        {
            @foreach (var article in Model.Articles)
            {
                <div class="card mb-2 mt-2">
                    @if (!string.IsNullOrEmpty(article.ImageUrl))
                    {
                        <img class="card-img-top" src="@article.ImageUrl" alt="Card image cap">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5> 
                        <p class="card-text">
                            <small class="text-muted">Дата: @article.CreatedOn.ToString("dd/MM/yyyy")</small>
                        </p>
                        <p class="card-text">@article.Content</p>
                        <p class="card-text">Автор: @article.AuthorName</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Няма новини.</p>
        }
    </div>

    @{
        int previousPage = Model!.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        int maxPage = (int)Math.Ceiling((double)Model.TotalArticles / Model.ArticlesPerPage);
    }
    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                asp-controller="News"
                asp-action="All"
                asp-route-currentPage="@previousPage"
                asp-route-year="@Model.Year"
                asp-route-sorting="@Model.ArticleSorting"><</a>
            </li>

            @for (int i = 1; i < maxPage; i++)
            {
                <a class="page-link @(Model.CurrentPage == i ? "<span class=\"visually-hidden\">(current)</span>" : string.Empty)"
                asp-controller="News"
                asp-action="All"
                asp-route-currentPage="@i"
                asp-route-year="@Model.Year"
                asp-route-sorting="@Model.ArticleSorting">1</a>
            }
            @*<li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>

            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">2 <span class="visually-hidden">(current)</span></a>
            </li>

            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>*@

            <li class="page-item">
                <a class="page-link @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
                   asp-controller="News"
                   asp-action="All"
                   asp-route-currentPage="@Model.CurrentPage + 1"
                   asp-route-year="@Model.Year"
                   asp-route-sorting="@Model.ArticleSorting">></a>
            </li>
        </ul>
    </nav>
</div>