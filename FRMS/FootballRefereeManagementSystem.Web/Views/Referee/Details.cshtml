@model RefereeDetailsViewModel
@{
    ViewData["Title"] = "Детайли";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div>
    <a class="offset-2 btn btn-lg btn-warning" asp-controller="Referee" asp-action="All"><i class="bi bi-arrow-left-square-fill"></i> Назад</a>
</div>

<div class="container bg-white shadow mt-5">
    <div class="row">
        <div class="col-5 mt-3 mb-3">
            <img class="img-fluid" src="@Url.Content(Model.ImageUrl)" alt="ref">
        </div>
        <div class="col-3 mt-5">
            <p><span class="fw-bold">Име:</span> @Model.FullName</p>
            <p><span class="fw-bold">Роля:</span> @Model.Role</p>
            <p><span class="fw-bold">Години:</span> @Model.Age</p>
            <p><span class="fw-bold">Контакт:</span> @Model.Contact</p>
            <p><span class="fw-bold">Град:</span> @Model.Town</p>
            <p><span class="fw-bold">Започнал на:</span> @($"{Model.CareerStart.ToString("dd.MM.yyyy")} г.")</p>
        </div>
        <div class="col-4 mt-5 text-center">
            <h4>Дивизии и ръководени мачове</h4>
            <hr />
            <p class="list-group-item"><strong>Общо ръководени мачове:</strong> @Model.TotalMatchesOfficiated</p>
            <ul class="list-group">
                @foreach (var division in Model.DivisionsAndMatchesCount)
                {
                    <li class="list-group-item">@division.Item1 : @division.Item2</li>
                }
            </ul>
        </div>
    </div>
</div>